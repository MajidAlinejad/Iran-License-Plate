{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "rootDir": "src",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": ["node"],
    "rootDirs": ["dist"],
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/IranLicensePlate", "src/global.d.ts"]
}
